# Frontend Environment Variables Template
# Copy this to .env.development, .env.staging, or .env.production and update values

# Backend API URL
VITE_API_BASE_URL=http://localhost:9000

# Firebase Configuration
# Get these from Firebase Console → Project Settings → General
VITE_FIREBASE_API_KEY=your-api-key-here
VITE_FIREBASE_AUTH_DOMAIN=your-project-id.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=your-project-id
VITE_FIREBASE_STORAGE_BUCKET=your-project-id.appspot.com
VITE_FIREBASE_MESSAGING_SENDER_ID=your-messaging-sender-id
VITE_FIREBASE_APP_ID=your-app-id
VITE_FIREBASE_MEASUREMENT_ID=your-measurement-id

# Mobile App Store URLs
# iOS App Store URL (update with your actual app URL when published)
VITE_IOS_APP_STORE_URL=https://apps.apple.com/in/app/shanthi-online-gold/id6751556761

# Android Play Store URL (update with your actual app URL when published)
VITE_ANDROID_APP_STORE_URL=https://play.google.com/store/apps/details?id=com.shanthi.onlinegold
